{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
        "@components/*": ["app/components/*"],
        "@contexts/*": ["app/contexts/*"],
        "@features/*": ["app/features/*"],    
        "@pages/*": ["app/pages/*"],
        "@root/*": ["app/*"],
        "@styles/*": ["app/styles/*"],
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
